# Ghostty Configuration
# Kitty設定から移行

# テーマ
theme = GitHub Dark

# テーマの文字色を上書き（より明るい白に）
foreground = #e6e6e6

# フォント設定
font-family = Hack Nerd Font Mono
font-size = 14

# 背景透過
background-opacity = 1.0

# 背景画像
background-image = /Users/ketiv/.dotfiles/ghostty/wallpapers/aaaa.jpg
background-image-opacity = 0.2
background-image-fit = contain

# ウィンドウ設定
window-decoration = false

# macOSでOptionキーをAltとして使用
macos-option-as-alt = true

# URL検出 (Cmd+クリックで開く)
link-url = true

# Shiftキーのマウス動作を変更（選択拡張を無効化）
mouse-shift-capture = always

# スクロール設定 (Ghosttyはデフォルトで滑らかなスクロール)
# wheel_scroll_multiplier相当の設定はなし

# キーバインド - 全て無効化して必要なものだけ有効
keybind = clear
keybind = super+v=paste_from_clipboard
keybind = super+q=quit

# ターミナル設定
term = xterm-256color

# カーソル設定
cursor-style = block

# カスタムシェーダー (カーソルトレイル)
custom-shader = ~/.dotfiles/ghostty/shaders/cursor_blaze.glsl
custom-shader-animation = always
